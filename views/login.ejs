<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <%   if (message.length>0) { %>
            <div class="mt-5 mb-3">
    
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
      
                  <strong><%=  message  %></strong>
      
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      
                </div>
      
              </div> 
          <% }    %>
          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="form-group">
              <label for="email">Email</label>
              <div class="input-group has-validation">
              <input type="email" id="email" class="form-control" name="username" required >
              <div class="invalid-tooltip">
                Molim vas unesite jedinstven i ispravan email!
              </div>
            </div>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <div class="input-group has-validation">
                <input type="password"  id="password" class="form-control" name="password" required >
                <div class="invalid-tooltip">
                  Molim vas unesite ispravnu lozinku.
                </div>
            </div>
            </div>
            <br>
            <br>
            <br>
            <br>
            <button type="submit" class="btn btn-dark">Login</button>
            <a class="btn btn-light btn-lg" href="/register" role="button">Registracija</a>
          </form>

        </div>
      </div>
    </div>
    

     <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign In with Google
          </a>
        </div>
      </div>
    </div> 

  </div>
</div>

<%- include('partials/footer') %>
